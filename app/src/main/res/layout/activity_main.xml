<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:backgroundTint="@color/purple_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                app:srcCompat="@drawable/i" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:srcCompat="@drawable/pray" />

                <ImageView
                    android:id="@+id/Morninhandnight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:srcCompat="@drawable/day" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="124dp"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="ادعيه"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="اذكار الصباح والمساء"
                    android:textColor="#FFF9F9"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/shalat" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/wudhu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="تعلم الصلاه"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/b100"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="تعلم الوضوء"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView44"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arbie" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button35"

                    android:layout_width="124dp"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="الاربعون النوويه"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" /> />

                <Button
                    android:id="@+id/button36"

                    android:layout_width="124dp"
                    android:layout_height="59dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7174b7"
                    android:padding="10dp"
                    android:text="قصص الانبياء"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" /> />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="315dp"
                    android:layout_height="128dp"
                    android:layout_marginLeft="190dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/r" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="اذكاري"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>