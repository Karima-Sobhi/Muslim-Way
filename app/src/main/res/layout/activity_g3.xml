<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/backup_rules"
    tools:context=".g3">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:srcCompat="@drawable/story" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا ادم  عليه السلام"
                android:textColor="@color/teal_700"
                android:textColorHint="#AA1010"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا  ادريس عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا نوح عليه السلام "
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا لوط عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text=" سيدنا إبراهيم عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا إسماعيل عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا يوسف عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />
            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا موسي عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا سليمان عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />




            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="سيدنا محمد عليه السلام"
                android:textColor="@color/teal_700"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>