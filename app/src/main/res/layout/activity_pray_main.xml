                android:textColor="#F4F4F2"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="6px"
                android:backgroundTint="#A776C5"
                android:text="دُعَاءٌ الْهَمِّ وَالْحَزَنِ"
                android:textColor="#F4F4F2"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="6px"
                android:backgroundTint="#A776C5"
                android:text="دُعَاءٌ قَضَاءِ الدَّيْنِ"
                android:textColor="#F4F4F2"
                android:textSize="25sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="6px"
                android:backgroundTint="#A776C5"
                android:text="أَدْعِيَة يَوْمَ الْجُمُعَةِ"
                android:textColor="#F4F4F2"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="6px"
                android:backgroundTint="#A776C5"
                android:text="دُعَاءَ مَنْ أُصِيبَ بِمُصِيبَةٍ"
                android:textColor="#F4F4F2"
                android:textSize="26sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn15"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="6px"
                android:backgroundTint="#A776C5"
                android:text="دُعَاءٌ الْعُطَاس"
                android:textColor="#F4F4F2"
                android:textSize="25sp"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>